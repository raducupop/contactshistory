<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TutorialScrollView" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/tutorial_text"
                android:text="@string/tutorial_main"
                android:id="@+id/MainTextView1"
                android:padding="10dp"
                android:fontFamily="sans-serif"
                android:textStyle="normal|bold" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/tutorial_header"
                android:text="@string/tutorial_header1"
                android:id="@+id/HeaderTextView1"
                android:textStyle="bold"
                android:background="@color/toolbar_owerflow_icon"
                android:padding="10dp" />


                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/tutorial_text"
                                android:text="@string/tutorial_content1"
                                android:id="@+id/TextView1"
                                android:padding="10dp" />


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:background="@color/toolbar_owerflow_icon"
                android:textColor="@color/tutorial_header"
                android:text="@string/tutorial_header2"
                android:id="@+id/HeaderTextView2"
                android:textStyle="bold"
                android:padding="10dp" />


                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/tutorial_text"
                                android:text="@string/tutorial_content2"
                                android:id="@+id/TextView2"
                                android:padding="10dp" />


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:background="@color/toolbar_owerflow_icon"
                android:textColor="@color/tutorial_header"
                android:text="@string/tutorial_header3"
                android:id="@+id/HeaderTextView3"
                android:textStyle="bold"
                android:padding="10dp" />


                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/tutorial_text"
                                android:text="@string/tutorial_content3"
                                android:id="@+id/TextView3"
                                android:padding="10dp" />


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:background="@color/toolbar_owerflow_icon"
                android:textColor="@color/tutorial_header"
                android:text="@string/tutorial_header4"
                android:id="@+id/HeaderTextView4"
                android:textStyle="bold"
                android:padding="10dp" />


            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/tutorial_text"
                                android:text="@string/tutorial_content4"
                                android:id="@+id/TextView4"
                                android:padding="10dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/tutorial_ok"
                android:id="@+id/ok"
                android:text="@string/tutorial_ok_button"
                android:textColor="@color/tutorial_header"
                android:layout_margin="15dp" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>